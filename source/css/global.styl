html
  height 100%
  width: 100%

body
  margin: 0
  height 100%
  width: 100%
  position relative
  z-index: -10
  margin-top: -20px
  font-weight: bold
  font-family: '方正兰亭'
  overflow-x: hidden
  word-wrap: break-word; // 移除换行
  word-break: break-all;
  background-color: #fcfcf8

img 
  width: 90%

hr
  border: 1px dashed rgba(gray, 0.5) !important
  width: 100%

article p a
  text-decoration: none


// 全局颜色变量
globle-nav-color = #2A2935
globle-font-color = #E3B007
// globle-font-color = #00C78C


@import 'theme/aVisited'

// 选中文字背景
*::selection
  background globle-font-color
  color white
*::-moz-selection
  background globle-font-color
  color white
*::-webkit-selection
  background globle-font-color
  color white