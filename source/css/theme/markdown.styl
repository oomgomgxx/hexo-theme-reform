@import '../global'

// mardown 的 > 样式
blockquote
    margin: 0 0 1rem;
    padding: 0.1rem 0.8rem;
    border-left: 0.2rem solid globle-font-color;
    background-color: rgba(globle-font-color, 0.1);
    color: #6a737d;


// markdown 的 `` 样式
code
    font-family: '方正兰亭'
    font-size: 0.9rem;
    padding: 0.1rem 0.2rem;
    background-color:rgba(27,31,35, 0.05);
    color: #f47466;
    word-wrap: break-word;
    word-break: break-word;
    border-radius: 3px
    overflow-wrap: break-word;
