@import '../global'

// mardown 的 > 样式
blockquote
    margin: 0 0 1rem;
    padding: 0.1rem 0.8rem;
    border-left: 2px solid globle-font-color;
    background-color: rgba(globle-nav-color, 0.05);
    color: #6a737d;
    font-size: 0.8em !important
    font-family: '苹方'

// markdown 的 `` 样式
code
    font-size: 0.9rem;
    font-family: '苹方'
    padding: 0.1rem 0.2rem;
    background-color:rgba(27,31,35, 0.05);
    color: #f47466;
    word-wrap: break-word;
    word-break: break-word;
    border-radius: 3px
    overflow-wrap: break-word;
