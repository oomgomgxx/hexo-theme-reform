@import 'global'
  
// 容器
#container
  position: relative;
  height 100%
  width: 100%

// 导航 --------------------------------------
#menu-outer
  background-color globle-nav-color
  float left
  width: 180px
  position: fixed
  height 100%
  color: globle-font-color 
  margin-top: 20px
  margin-right: 30px
  @media screen and (max-width: 768px)
    display: none

// 导航栏超链接
#menu-a
  display block
  height 40px
  line-height: 40px
  text-align: right
  padding-right: 18px 
  text-decoration: none
  color: #ffffff
  &:hover
    color: globle-font-color 
    background-color: #faf5f0
    border-right: 3px solid globle-font-color

// 博客标题
#menu-title h3 a
  color: globle-font-color
  text-decoration: none
  font-size: 1.5rem
  font-family 'hdfxingkai20f3f1b02721d54' !important

// 导航栏footer
#menu-footer
  position absolute
  left: 0
  font-size: 10px
  bottom: 1%
  width: 180px
  text-align: center
  font-family: Monaco